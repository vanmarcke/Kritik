{% extends 'base.html.twig' %}

{% block title %}Liste des disques{% endblock %}

{% block h1 %}Liste des disques{% endblock %}

{% block body %}

    <a href="{{ path("record_new") }}" class="btn btn-primary">
        <i class="fa fa-plus"></i>
    </a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Sortie</th>
                <th>Artiste</th>
                <th>Voir</th>
                <th>Editer</th>
                <th>Supp</th>
                <th>Noter</th>
            </tr>
        </thead>

        {% for record in liste_records %}
            <tr>
                <td>{{ record.id }}</td>
                <td>{{ record.title }}</td>
                <td>{{ record.description }}</td>
                <td>{{ record.releaseAt |date("Y") }}</td>
                <td>{{ record.artist.name |upper }}</td>               
         
            <td> 
                <a href="{{ path("record_fiche", { id: record.id }) }}">
                    <i class="fa fa-eye"></i></a>
            </td>

            <td>
                 <a href="{{ path("record_modifier", { id: record.id }) }}"> 
                    <i class="fa fa-edit"></i></a>
            </td>

            <td>
                <a href="{{ path("record_supprimer", { id: record.id }) }}">
                    <i class="fa fa-trash"></i></a>
            </td>

            <td>    
                <a href="{{ path("noter", { id: record.id }) }}" class="card-link">
                    <i class="fa fa-heart"></i></a>                                   
            </td>

            </tr>

        {% endfor %}
    </table>
{% endblock %}



