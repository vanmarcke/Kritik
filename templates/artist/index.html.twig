{% extends 'base.html.twig' %}

{% block title %}Artistes{% endblock %}

{% block h1 %}Liste des artistes{% endblock %}


{% block body %}
    <a href="{{ path("artist_new") }}" class="btn btn-primary">
        <i class="fa fa-plus"></i>
    </a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Voir</th>
                <th>Editer</th>
                <th>Supp</th>          
            </tr>
        </thead>

        {% for artiste in liste_artistes %}
            <tr>
                <td>{{ artiste.id }}</td>
                <td>{{ artiste.name |upper }}</td>
                <td>{{ artiste.description }}</td>
                <td>
                    <a href="{{ path("artist_fiche", { id: artiste.id }) }}">
                        <i class="fa fa-eye"></i></a>
                </td>
                <td>          
                    <a href="{{ path("artist_modifier", { id: artiste.id }) }}">
                        <i class="fa fa-edit"></i></a>
                </td>
                <td>  
                        <a href="{{ path("artist_supprimer", { id: artiste.id }) }}">
                        <i class="fa fa-trash"></i></a>                            
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
